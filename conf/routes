# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /_cms                                   Application.index
GET     /_cms/site/create                       Application.create
POST    /_cms/site/save                         Application.save
GET     /_cms/site/refresh                      Application.refresh
GET     /_cms/site/clear                        Application.removeResources
GET     /_cms/site/delete                       Application.removeSite
GET     /_cms/site/preview                      Application.preview
GET     /process/refresh/{id}                   BackgroundJobs.refreshSite
GET     /_cms/data/{collection}                 Data.get
POST    /_cms/data/{collection}                 Data.put
GET     /_cms/data/q/{collection}               Data.query
    
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
GET       /_cms/redirect                        Resources.serve
GET       /{<.*>stuff}                          Resources.serve
# *       /{controller}/{action}                {controller}.{action}
